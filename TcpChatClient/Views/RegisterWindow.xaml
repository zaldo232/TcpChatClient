<Window x:Class="TcpChatClient.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="회원가입" Height="270" Width="300"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="아이디"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="비밀번호"/>
            <PasswordBox x:Name="pwdBox" PasswordChanged="PasswordBox_PasswordChanged"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Label Content="비밀번호 확인"/>
            <PasswordBox x:Name="confirmBox" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
        </StackPanel>

        <Button Grid.Row="3" Content="가입하기" Width="100" Height="30"
                HorizontalAlignment="Center" Command="{Binding RegisterCommand}"/>
    </Grid>
</Window>
